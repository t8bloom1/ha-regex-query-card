{
  "name": "ha-regex-query-card",
  "version": "2.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatebl/ha-regex-query-card.git"
  },
  "bugs": {
    "url": "https://github.com/tatebl/ha-regex-query-card/issues"
  },
  "homepage": "https://github.com/tatebl/ha-regex-query-card#readme",
  "description": "A Home Assistant custom card that displays entities matching regex patterns",
  "main": "dist/ha-regex-query-card.js",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "build:prod": "npm run clean && NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --run",
    "test:e2e": "jest --testPathPattern=e2e.test.ts --run",
    "test:performance": "node scripts/performance-test.js",
    "test:compat": "node scripts/browser-compat-test.js",
    "validate": "npm run lint && npm run test && npm run build:prod && node scripts/validate-build.cjs && npm run validate-hacs && npm run test:compat",
    "validate-hacs": "node scripts/validate-hacs.cjs",
    "pre-commit": "npm run lint:fix && npm run build && npm run validate-hacs",
    "test-hacs": "node scripts/test-hacs-installation.cjs",
    "size-check": "bundlesize"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "regex",
    "entities"
  ],
  "author": "Your Name",
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "bundlesize": "^0.18.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.6.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "peerDependencies": {
    "home-assistant-js-websocket": ">=8.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/ha-regex-query-card.min.js",
      "maxSize": "50 kB"
    }
  ]
}
